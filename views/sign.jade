extends layout

block content
  
  if errors
    for each in errors
      p(style='color: red')= each

  if signInPage
    h1 Sign In
    form(id='signinForm', action='/signin', method='POST')
      p
        | email
        input(id='inputEmail' name='inputEmail' type='text')
      p
        | password
        input(id='inputPassword' name='inputPassword' type='text')
      p
        button(type='submit') Sign In
  else
    h1 Sign Up
    form(id='signupForm', action='/signup', method='POST')
      p
        | email
        input(id='inputEmail' name='inputEmail' type='text')
      p
        | password
        input(id='inputPassword' name='inputPassword' type='text')
      p
        button(type='submit') Sign Up